<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_3.dtd">

<web-app>
	<description>
		Shibboleth ARP - Editor for user specific release policies
	</description>

	<context-param>
		<param-name>Config</param-name>
		<param-value>
        /path/to/config/arpviewer/ArpViewer.properties;
        /path/to/config/common/Common.properties;
		</param-value>
	</context-param>

	<!-- Servlet configuration -->
	<servlet>
		<servlet-name>ArpViewerController</servlet-name>
		<display-name>Viewer for Arp Files</display-name>
		<servlet-class>
			ch.SWITCH.aai.arpviewer.Controller
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!-- Servlet mapping to paths -->
	<servlet-mapping>
		<servlet-name>ArpViewerController</servlet-name>
		<url-pattern>/Controller</url-pattern>
	</servlet-mapping>

</web-app>

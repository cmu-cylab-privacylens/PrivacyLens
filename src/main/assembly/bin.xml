<!-- Binary distribution, along with dependency jar files -->
<assembly>
    <id>bin</id>
    <formats>
        <!--<format>tar.gz</format>-->
        <format>zip</format>
    </formats>
        
    <fileSets>
        <!-- Documentation -->
        <fileSet>
            <directory>doc/</directory>
            <outputDirectory>/doc</outputDirectory>
        </fileSet>
     </fileSets>
     
     <files>       
        <!--  IdP Plugin -->
        <file>
            <source>idp-plugin/target/idp-plugin-${project.version}-bin.zip</source>
            <outputDirectory>/</outputDirectory>
        </file>
        
        <!--  Viewer -->
        <file>
            <source>viewer/target/viewer-${project.version}-bin.zip</source>
            <outputDirectory>/</outputDirectory>
        </file>
      </files>
            
</assembly>
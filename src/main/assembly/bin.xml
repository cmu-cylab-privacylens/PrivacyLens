<!-- Binary distribution, along with dependency jar files -->
<assembly>
    <id></id>
    <formats>
        <format>zip</format>
    </formats>
        
    <fileSets>
        <!-- Documentation -->
        <fileSet>
            <directory>doc/</directory>
            <outputDirectory>/doc</outputDirectory>
        </fileSet>
        
        <!-- Configuration -->
        <fileSet>
            <directory>conf/</directory>
            <outputDirectory>/conf.dist</outputDirectory>
        </fileSet>
        
        <!-- Examples -->
        <fileSet>
            <directory>examples/</directory>
            <outputDirectory>/examples</outputDirectory>
        </fileSet>
        
        <!--  IdP Plugin -->
        <fileSet>
            <directory>uApprove-idp-plugin/target/uApprove-idp-plugin-${project.version}.dir</directory>
            <outputDirectory>/uApprove-idp-plugin/</outputDirectory>
        </fileSet>
        
        <!--  Viewer -->
        <fileSet>
            <directory>uApprove-viewer/target/uApprove-viewer-${project.version}.dir</directory>
            <outputDirectory>/uApprove-viewer/</outputDirectory>
        </fileSet>
     </fileSets>
            
</assembly>
<?xml version="1.0" encoding="UTF-8"?>
<configuration>

<appender name="RootConsoleAppender"
    class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>%d{yyyy-MM-dd HH:mm:ss},%p,%c,%M %m%n</pattern>
    </layout>
  </appender>

  <appender class="ch.qos.logback.core.FileAppender" name="RootFileAppender">
   <file>/path/to/log/arpviewer.log</file>
   <append>true</append>
   <layout class="ch.qos.logback.classic.PatternLayout">
     <pattern>%d{yyyy-MM-dd HH:mm:ss},%p,%c,%M %m%n</pattern>
   </layout>
  </appender>
 
  <logger name="ch.SWITCH.aai.uApprove.viewer">
    <level value="INFO" />
  </logger>
 
  <logger name="ch.SWITCH.aai.uApprove.components"">
    <level value="INFO" />
  </logger>
 
  <logger name="ch.SWITCH.aai.uApprove.storage"">
    <level value="INFO" />
  </logger>
 
 <root>
   <level value="INFO"/>
   <appender-ref ref="RootFileAppender"/>
 </root>
 
</configuration>

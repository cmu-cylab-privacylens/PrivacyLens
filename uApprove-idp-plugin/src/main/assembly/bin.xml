<!-- Binary distribution, along with dependency jar files -->
<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*:jar:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
    
    <fileSets>
        <!-- Configuration template -->
        <fileSet>
            <directory>src/main/resources/conf</directory>
            <outputDirectory>/conf-template</outputDirectory>
        </fileSet>
    </fileSets>
    
</assembly>